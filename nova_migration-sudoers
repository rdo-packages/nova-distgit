Defaults:nova_migration !requiretty

nova_migration ALL = (nova) NOPASSWD: /bin/nc -U /var/run/libvirt/libvirt-sock
nova_migration ALL = (nova) NOPASSWD: /bin/mkdir -p /var/lib/nova/instances/*
nova_migration ALL = (nova) NOPASSWD: /bin/rm -rf /var/lib/nova/instances/*
nova_migration ALL = (nova) NOPASSWD: /bin/touch /var/lib/nova/instances/*
nova_migration ALL = (nova) NOPASSWD: /bin/scp -r -t /var/lib/nova/instances/*